<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="marage">
        <!-- Customize your theme here. -->
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>
    <!--无边框弹出框-->
    <style name="CustomDialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否使用全屏-->
        <item name="android:windowFullscreen">true</item>
        <!-- 设置无遮罩层 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!--弹出动画-->
    <style name="dialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <!--<item name="android:windowEnterAnimation">@anim/animation_aflyframe_magnify_show-->
        <!--</item>-->
        <!--<item name="android:windowExitAnimation">@anim/animation_aflyframe_magnify_hide-->
        <!--</item>-->
    </style>

    <style name="PopAnimation_Magnify">
        <item name="android:windowEnterAnimation">@anim/animation_aflyframe_slide_top_in</item>
        <item name="android:windowExitAnimation">@anim/animation_aflyframe_slide_top_out</item>
    </style>
    <style name="PopAnimation_Down_Up">
        <item name="android:windowEnterAnimation">@anim/animation_aflyframe_slide_down_in</item>
        <item name="android:windowExitAnimation">@anim/animation_aflyframe_slide_down_out</item>
    </style>
</resources>
